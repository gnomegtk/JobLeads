{% extends 'base.html.twig' %}

{% block title %}State index{% endblock %}

{% block body %}
    <h1>State index</h1>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Country</th>
                <th scope="col">Name</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for state in states %}
            <tr>
                <td>{{ state.id }}</td>
                <td>{{ state.country.name }}</td>
                <td>{{ state.name }}</td>
                <td>
                    <a href="{{ path('state_show', {'id': state.id}) }}">show</a>
                    <a href="{{ path('state_edit', {'id': state.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('state_new') }}">Create new</a>
{% endblock %}
